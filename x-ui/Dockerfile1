FROM debian:11-slim
LABEL maintainer t.me/King_Stark_bot

ARG DEBIAN_FRONTEND noninteractive
RUN apt-get update && apt-get install -y --no-install-recommends -y ca-certificates curl \
    && curl -O https://raw.githubusercontent.com/FranzKafkaYu/x-ui/master/install.sh && chmod +x install.sh && ./install.sh \
    && apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

ENV TZ=Asia/Shanghai \
    LANG=C.UTF-8

# WORKDIR /root

VOLUME [ "/etc/x-ui" ]
CMD ["sh", "-c", "/usr/local/x-ui/x-ui"]
